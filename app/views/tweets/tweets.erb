<div class="section-align">
  <span class="alignleft"><h2 >Welcome, <%=@user.username%></h2></span>
  <span class="alignright"><a class="user-button"href="/logout">Logout</a></span>
</div>

<div class="clear-fix grid-container">
  <div class="grid-item">
    <div class="section-align">
      <h3 class="alignleft">Your Tweets....</h3>
      <a class="alignright user-button" href="/tweets/new">Create Tweet</a>
    </div>

    <ul class="clear-fix">
      <% @user_tweets.each do |tweet| %>
        <li class="clear-fix">
          <p class="alignleft"><%=tweet.content%></p>
          <a class="alignright user-button" href="/tweets/<%=tweet.id%>/edit">Modify</a>
        </li>
      <% end %>
    </ul>
  </div>
  <div class="grid-item">
    <form method="post" action="/users/search" class="user-form" id="search_form">
      <h3>Search for Tweets By User</h3>
      <input type="text" id="search_user" name="search_user" placeholder="User Name" required>
      <button class="user-button" type="submit" form="search_form" value="Search"></button>
    </form>
    <h3>Latest Tweets From All Users....</h3>
    <ul>
      <% @latest_tweets.each do |tweet| %>
        <li><a class="tweet-link" href="/tweets/<%=tweet.id%>"><%=tweet.content%> : <%=tweet.user.username%></a></li>
      <% end %>
    </ul>
  </div>
</div>
