<h2>Welcome, <%=@user.username%></h2>
<div class="grid-container">
  <div class="grid-item">
    <h3>Your Tweets....</h3>
    <ul>
      <% @user_tweets.each do |tweet| %>
        <li>
          <%=tweet.content%>
          <a class="user_button" href="/tweets/<%=tweet.id%>/edit">Modify</a>
          <form method="post" action="/tweets/<%=tweet.id%>/delete"><input id="hidden" type="hidden" name="_method" value="delete"><input type="submit" id="Delete Tweet" value="Delete Tweet"></form>
        </li>
      <% end %>
    </ul>
  </div>
  <div class="grid-item">
    <h3>All Tweets....</h3>
    <ul>
      <% @tweets.each do |tweet| %>
        <li><%=tweet.content%> : <%=tweet.user.username%></li>
      <% end %>
    </ul>
  </div>
</div>


<div class="button_panel">
  <a class="user_button" href="/logout">Logout</a><br/>
  <a class="user_button" href="/tweets/new">Create Tweet</a>
</div>
